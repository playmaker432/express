<form action="/bookings" method="POST" style="padding: 10px 10px;">
  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Email</label>
      <div class="col-sm-9">
      <input id="email_input" class="form-control" placeholder="Email input" name="email">
      </div>
  </div>            

  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Number of tickets</label>
      
      <div class = "col-sm-9">
          <select id="numTickets_input" name="numTickets" class="form-select" aria-label="Default select example">
          <option value="" selected>Open this select menu</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          </select>
      </div>
  </div>

  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Favourite Team</label>

      <div class = "col-sm-9">
          <select name = "team" class="form-select" aria-label="Default select example" onchange="teamSelected(this.value)">
              <option value="" selected>Open this select menu</option>
              <option value="Avengers">Avengers</option>
              <option value="JLA">Justice League</option>
          </select>
      </div>
  </div>

  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Favourite Hero</label>

      <div class = "col-sm-9">
          <select name = "superhero" class="form-select" aria-label="Default select example" id="superhero" disabled>
          </select>
      </div>
      </div>
   </div>     

  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Payment method</label>
      
      <div class = "col-sm-9">
          <select id = "payment_input" name = "payment" class="form-select" aria-label="Default select example"> 
          <option value="" selected>Payment method</option>
          <option value="Credit card">Credit card</option>
          <option value="Paypal">Paypal</option>
          <option value="Octopus">Octopus</option>
          </select>
      </div>
  </div>

  <div class="row mb-3">
      <label class="col-sm-3 col-form-label">Terms</label>
      
      <div class = "col-sm-9">
          <select id = "terms_input" name = "terms" class="form-select" aria-label="Default select example"> 
          <option value="" selected>Terms</option>
          <option value="on">On</option>
          </select>
       </div>
  </div>

  <br> 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
      

