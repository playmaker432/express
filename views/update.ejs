    <br>
    <form action="/update/<%= booking._id %>" method="POST" style="padding: 20px 20px">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
                <input id="email_input" class="form-control" value="<%=
                                booking.email %>" name="email">
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Number of tickets</label>
            <div class="col-sm-9">
                <select id="numTickets_input" name="numTickets" class="form-select" aria-label="Default select
                                example" aria-placeholder="<%= booking.numTickets %> ">
                    <option selected value="" >Open this select menu</option>         
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Favourite Team</label>
            <div class="col-sm-9">
                <select name="team" class="form-select" aria-label="Default select example"
                    onchange="teamSelected(this.value)">
                    <option value="">Open this select menu</option>
                    <option value="Avengers">Avengers</option>
                    <option value="JLA">Justice League</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Favourite Hero</label>
            <div class="col-sm-9">
                <select name="superhero" class="form-select" aria-label="Default select example" id="superhero"
                    disabled>
                </select>
            </div>
        </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Payment method</label>
            <div class="col-sm-9">
                <select id="payment_input" name="payment" class="form-select" aria-label="Default select
                            example">
                    <option value="" selected>Payment method</option>
                    <option value="Credit card">Credit card</option>
                    <option value="Paypal">Paypal</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Terms</label>

            <div class="col-sm-9">
                <select id="terms_input" name="terms" class="form-select" aria-label="Default select
                            example">
                    <option value="" selected>Terms</option>
                    <option value="on">on</option>
                </select>
            </div>

        </div>

        <br>
        <div class="btn-group" role="group" aria-label="second group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>

        <a href="/delete/<%= booking._id %>" class="btn btn-danger">Delete</a>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous">
    </script>

    <script>
        function teamSelected(team) {
            var superheroElem = document.getElementById("superhero");
            superheroElem.options.length = 0;

            var avengers = ["Captain America", "Iron Man", "Thor", "Hulk", "Black Widow", "Hawkeye"];
            var jla = ["Superman", "Batman", "Wonder Woman", "Flash", "Green Lantern", "Aquaman"];

            if (team == "Avengers") {

                for (var hero of avengers) {
                    var option = document.createElement("option");
                    option.text = hero;
                    option.value = hero;
                    superheroElem.add(option);
                }

                superheroElem.disabled = false;

            } else if (team == "JLA") {

                for (var hero of jla) {
                    var option = document.createElement("option");
                    option.text = hero;
                    option.value = hero;
                    superheroElem.add(option);
                }

                superheroElem.disabled = false;

            } else {

                superheroElem.disabled = true;
            }
            
        }

    </script>


<script>
    document.querySelector("option[value='<%= numTickets %>']").selected = true;
    document.querySelector("option[value='<%= booking.team %>']").selected = true;
    teamSelected('<%= booking.team %>')
    document.querySelector("option[value='<%= booking.superhero %>']").selected = true;
    document.querySelector("option[value='<%= booking.payment %>']").selected = true;
    document.querySelector("option[value='<%= booking.terms %>']").selected = true;
</script>
