  <div class="p-3 bg-white border-opacity-75 border-secondary  border-start-0 rounded-end">
    <h2>Search result</h2>
  </div>
  <hr>


  <% for (var booking of bookings) { %>

    <div class="card border-secondary mb-3">
      <div class="row g-0">
        <div class="col-sm-5">
          <img src="/images/<%= booking.superhero %>.jpg" class="card-img-top" style="object-fit:cover;" alt="..." />
        </div>

        <div class="col-sm-7">
          <div class="card-body">
              <h5 class="card-title text-decoration-underline">Record</h5>
              <br>
              <p class="card-text">Email: <%= booking.email %>
              </p>
              <p class="card-text">
                Number of Tickets: <%= booking.numTickets %>
              </p>
              <p class="card-text">Payment: <%= booking.payment %>
              </p>
              <a href="/update/<%= booking._id %>" class="btn btn-primary stretched-link">Click to edit</a>
            </div>          
        </div>

        </div>
      </div>
    </div>
    <% } %>


    
      <nav aria-label="Page navigation example" style="margin: 1em; font: 30px">
        <ul class="pagination justify-content-center">
        <% if(currentPage == 1) { %>
          <a class="page-link disabled" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage-1 %>">Previous</a>

          <% for (i = 1; i <= 5; i++) { %>
            <% if(i == currentPage) { %>
            <li class="page-item disabled">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>

          <% if(i != currentPage) { %>
            <li class="page-item ">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>
          <% } %>

          <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage+1 %>">Next</a>

        <% } %>

        <% if(currentPage == 2) { %>
          <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage-1 %>">Previous</a>

          <% for (i = 1; i <= 5; i++) { %>
            <% if(i == currentPage) { %>
            <li class="page-item disabled">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>

          <% if(i != currentPage) { %>
            <li class="page-item ">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>
          <% } %>

          <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage+1 %>">Next</a>
        <% } %>
      
        <% if(currentPage > 2) { %>
          <li class="page-item ">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage-1 %>">Previous</a>
          </li>
          <% for (i = currentPage-2; i <= currentPage+2; i++) { %>
            <% if(i == currentPage) { %>
            <li class="page-item disabled">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>

          <% if(i != currentPage) { %>
            <li class="page-item ">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%= i %>"><%= i %></a>
          </li>
          <% } %>
          <% } %>

          <li class="page-item ">
            <a class="page-link" href="/search?email=<%= email %>&numTickets=<%= numTickets %>&team=<%= team %>&superhero=<%= superhero %>&payment=<%= payment %>&terms=<%= terms %>&perPage=<%= perPage %>&page=<%=currentPage+1 %>">Next</a>
          </li>
        <% } %>

        </ul>
      </nav>

